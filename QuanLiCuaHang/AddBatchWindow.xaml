<Window x:Class="QuanLiCuaHang.AddBatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm lô hàng mới" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Ngày nhập:"/>
            <DatePicker x:Name="InputDatePicker" Margin="0,0,0,10"/>

            <TextBlock Text="Nhà cung cấp:"/>
            <ComboBox x:Name="SupplierComboBox" DisplayMemberPath="Name" Margin="0,0,0,10"/>

            <Button Content="Thêm lô hàng" Click="AddBatch_Click" Width="100" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>