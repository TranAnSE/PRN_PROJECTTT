<Window x:Class="QuanLiCuaHang.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Sửa sản phẩm" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Mã sản phẩm:"/>
            <TextBox x:Name="BarcodeTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Tên sản phẩm:"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Loại:"/>
            <TextBox x:Name="TypeTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Nơi sản xuất:"/>
            <TextBox x:Name="ProductionSiteTextBox" Margin="0,0,0,10"/>

            <Button Content="Lưu" Click="SaveProduct_Click" Width="100" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>