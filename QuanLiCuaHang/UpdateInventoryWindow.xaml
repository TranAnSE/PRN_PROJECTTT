<Window x:Class="QuanLiCuaHang.UpdateInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cập nhật kho" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Mã sản phẩm:"/>
            <TextBox x:Name="ProductIdTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Tên sản phẩm:"/>
            <TextBox x:Name="ProductNameTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Số lượng tồn:"/>
            <TextBox x:Name="InStockTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Giá nhập:"/>
            <TextBox x:Name="InputPriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Giá bán:"/>
            <TextBox x:Name="OutputPriceTextBox" Margin="0,0,0,10"/>

            <Button Content="Cập nhật" Click="UpdateInventory_Click" Width="100" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>