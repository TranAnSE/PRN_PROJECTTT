<Window x:Class="QuanLiCuaHang.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Mật khẩu:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,0,0,10"/>
            <Button Content="Đăng nhập" Width="100" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>