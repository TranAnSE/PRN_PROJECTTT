<Window x:Class="QuanLiCuaHang.AddEditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Sửa khách hàng" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Tên:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Địa chỉ:"/>
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Điểm tích lũy:"/>
            <TextBox x:Name="PointTextBox" Margin="0,0,0,10"/>

            <Button Content="Lưu" Click="SaveCustomer_Click" Width="100" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>