<Window x:Class="QuanLiCuaHang.CreateVoucherBlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo đợt voucher mới" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Tên đợt:"/>
            <TextBox x:Name="ReleaseNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Loại voucher:"/>
            <ComboBox x:Name="TypeVoucherComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Giảm giá cố định"/>
                <ComboBoxItem Content="Giảm giá theo phần trăm"/>
            </ComboBox>

            <TextBlock Text="Giá trị:"/>
            <TextBox x:Name="ParValueTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Ngày bắt đầu:"/>
            <DatePicker x:Name="StartDatePicker" Margin="0,0,0,10"/>

            <TextBlock Text="Ngày kết thúc:"/>
            <DatePicker x:Name="FinishDatePicker" Margin="0,0,0,10"/>

            <TextBlock Text="Số lượng voucher:"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,0,0,10"/>

            <Button Content="Tạo đợt voucher" Click="CreateVoucherBlock_Click" Width="150" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>