<Window x:Class="QuanLiCuaHang.AddProductToImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm sản phẩm" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <ComboBox x:Name="ProductComboBox" DisplayMemberPath="Title" Margin="0,0,0,10"/>
            <TextBlock Text="Số lượng:"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Giá nhập:"/>
            <TextBox x:Name="InputPriceTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Giá bán:"/>
            <TextBox x:Name="OutputPriceTextBox" Margin="0,0,0,10"/>
            <Button Content="Thêm" Click="AddProduct_Click" Width="100" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>