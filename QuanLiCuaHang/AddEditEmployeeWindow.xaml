<Window x:Class="QuanLiCuaHang.AddEditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Sửa nhân viên" Height="450" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Tên:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Vai trò:"/>
            <ComboBox x:Name="RoleComboBox" Margin="0,0,0,10">
                <ComboBoxItem>Staff</ComboBoxItem>
                <ComboBoxItem>Admin</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Địa chỉ:"/>
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Tên đăng nhập:"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Mật khẩu:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <TextBlock Text="Lương:"/>
            <TextBox x:Name="SalaryTextBox" Margin="0,0,0,10"/>

            <Button Content="Lưu" Click="SaveEmployee_Click" Width="100" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>